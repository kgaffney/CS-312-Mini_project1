<%- include("partials/header") %>

<h4>Edit Post</h4>
<form action="/edit/<%= post.id %>" method="POST" class="mb-3">
  <input type="text" name="author" value="<%= post.author %>" class="form-control mb-2" required>
  <input type="text" name="title" value="<%= post.title %>" class="form-control mb-2" required>
  <textarea name="content" class="form-control mb-2" rows="5" required><%= post.content %></textarea>
  <button type="submit" class="btn btn-primary">Save</button>
  <a href="/" class="btn btn-secondary">Cancel</a>
</form>

<%- include("partials/footer") %>
